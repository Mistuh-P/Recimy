<div class="row">
<div class="container col-xs-10 col-xs-offset-1 div-mate">

<h1 class="cat-head heady">Login</h1>

    <%= render "layouts/flash" %>

  <%= bootstrap_form_for :user do |f| %>
    <%= f.text_field :email, placeholder: "Enter your email" %>
    <%= f.password_field :password_digest, placeholder: "Enter your password"%>
    <%= f.submit "Login", :class => 'btn btn-success'%>
  <% end %>

  </div>
</div>