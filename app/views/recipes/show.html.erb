<br>

<% if @recipe.user_id === @current_user.id %>
<%= link_to "Edit recipe", edit_recipe_path, :class=>"btn btn-success" %>
<%= link_to "Remove recipe", @recipe, :method => :delete, :class=>"btn btn-danger" %>
<% else %>
<% end %>
</div>
</div>



