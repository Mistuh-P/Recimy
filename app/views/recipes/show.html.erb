<div class="row">
  <div class="container col-md-6 col-md-offset-3 recipe-div">

<h1 class="heady"><%= @recipe.name %></h1>

<img src=<%= @photo %>>

<br>
<br>


<p class="textty"><h2 id="heady2">Ingredients:</h2 id="heady2"><br>

<script type="text/javascript">
    var mystring = '<%=  @recipe.ingredients %>';
    mystring = '<ul id=ingredients><li>' + mystring.replace(/,/g,'</li><li>') + '</li></ul>';
    document.write(mystring);
</script>

<br>
<br> <h2 id="heady2">Directions:</h2> <br>



<script type="text/javascript">
    var mystring = '<%=  @recipe.directions %>';
    mystring = '<ul id=directions><li>' + mystring.replace(/~/gi,'</li><li>') + '</li></ul>';
    document.write(mystring);
</script>


<br> <br><h2 id="heady2">Categories:</h2> <br>

 <!-- <%= @recipe.tags.map{|t| t.name}.join(', ') %> -->
<ul class="category-list">
  <% @tag.each do |t| %>
      <li class="category-item"><%= link_to t.name, t %></li>
    <% end %>
</ul>


</p>

<!--
  <%=  @recipe.tags.each do |t|

  link_to t.name, tag_path(t)

 end %>
 -->




<br>

<% if @recipe.user_id == @current_user.id %>
<%= link_to "Edit recipe", edit_recipe_path, :class=>"btn btn-success" %>
<%= link_to "Remove recipe", @recipe, :method => :delete, :class=>"btn btn-danger", data: { confirm: 'Are you sure you want to delete this recipe?' } %>
<% else %>

<%= link_to "add to cookbook", recipe_favorite_path(@recipe.id), :class=>"btn btn-info" %>

<% end %>
</div>
</div>



